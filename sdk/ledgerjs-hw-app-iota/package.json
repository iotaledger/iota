{
	"name": "@iota/ledgerjs-hw-app-iota",
	"version": "0.4.1",
	"description": "Ledger Hardware Wallet Iota Application API",
	"keywords": [
		"Ledger",
		"LedgerWallet",
		"Iota",
		"NanoS",
		"Blue",
		"Hardware Wallet"
	],
	"author": "IOTA Foundation <info@iota.org>",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "github.com:iotaledger/iota.git"
	},
	"bugs": {
		"url": "https://github.com/iotaledger/iota/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/iotaledger/iota/sdk/ledgerjs-hw-app-iota/#readme",
	"files": [
		"CHANGELOG.md",
		"dist",
		"src"
	],
	"type": "commonjs",
	"main": "./dist/cjs/iota-sdk",
	"module": "./dist/esm/iota-sdk",
	"types": "./dist/cjs/Iota.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/iota-sdk",
			"require": "./dist/cjs/iota-sdk"
		}
	},
	"size-limit": [
		{
			"path": "dist/iota-sdk",
			"limit": "10 kB"
		}
	],
	"scripts": {
		"analyze": "size-limit",
		"clean": "rm -rf tsconfig.tsbuildinfo ./dist",
		"build": "build-package",
		"eslint:check": "eslint --max-warnings=0 .",
		"eslint:fix": "pnpm run eslint:check --fix",
		"lint": "pnpm run eslint:check && pnpm run prettier:check",
		"lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
		"prepublishOnly": "pnpm build",
		"prettier:check": "prettier -c --ignore-unknown .",
		"prettier:fix": "prettier -w --ignore-unknown .",
		"prettier:fix:watch": "onchange '**' -i -f add -f change -j 5 -- prettier -w --ignore-unknown {{file}}",
		"size": "size-limit",
		"test": "pnpm test:typecheck && pnpm test:unit",
		"test:typecheck": "tsc -p ./tests",
		"test:unit": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@ledgerhq/hw-transport": "^6.31.0",
		"fast-sha256": "^1.3.0"
	},
	"devDependencies": {
		"@ledgerhq/hw-transport-mocker": "^6.29.0",
		"@iota/build-scripts": "workspace:*",
		"@size-limit/preset-small-lib": "^11.1.4",
		"@types/node": "^20.14.10",
		"size-limit": "^11.1.4",
		"typescript": "^5.5.3",
		"vitest": "^2.0.1"
	}
}
